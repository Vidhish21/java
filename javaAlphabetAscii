import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc = new Scanner(System.in);
	    char ch,ch1;
	    System.out.println("Enter a character: ");
	    ch= sc.next().charAt(0);
	    if(Character.isUpperCase(ch)==true){
	        ch1= Character.toLowerCase(ch);
	        System.out.println("The lowercase of " + ch+ " is " + ch1);
	        System.out.println("The ASCII value of " + ch + " is " + (int)ch1);
	    }
	    else{
	        ch1= Character.toUpperCase(ch);
	         System.out.println("The uppercase of " + ch+ " is " + ch1);
	        System.out.println("The ASCII value of " + ch + " is " + (int)ch1);
	    
	    }
	}
}
